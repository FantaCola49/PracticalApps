@page
@using Packt.Shared
@model Northwind.Web.Pages.SuppliersModel
@{
}

<div class="row">
    <h1 class="display-2">Поставщики</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Название компании</th>
                <th>Страна</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Suppliers is not null)
            {
                @foreach(Supplier s in Model.Suppliers)
                {
                    <tr>
                        <td>@s.CompanyName</td>
                        <td>@s.Country</td>
                        <td>@s.Phone</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
