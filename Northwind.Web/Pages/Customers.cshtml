@page
@model Northwind.Web.Pages.CustomersModel
@using Packt.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <h1>Наши клиенты!</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Имя клиента</th>
                <th>Страна</th>
                <th>Номер телефона</th>
            </tr>
        </thead>
        <tbody>
            @if (Model._customers is not null)
            {
                @foreach(Customer c in Model._customers)
                {
                    <tr>
                        <td>
                            <a asp-page="CustomerInfo" asp-page-handler="OnGet" asp-route-custId ="@c.CustomerId">
                                @c.ContactName</a>
                        </td>
                        <td>@c.Country</td>
                        <td>@c.Phone</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
